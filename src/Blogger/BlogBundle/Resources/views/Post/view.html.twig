{# src/Blogger/Blog/Resources/views/Post/view.html.twig #}
{% extends "::base.html.twig" %}

{% block title %}{{ post.title }}{% endblock %}
{% block body %}
    <h1>{{ post.title }} </h1>
    <p>{{ post.message|nl2br }} </p>
    <p><small>Created by {{ post.user }} at {{ post.created|date('H:i d/m/y') }}
        </small>
        <a href="{{ path('blogger_post_edit',{'id':post.id}) }} ">edit</a>
    </p>
{% endblock %}

